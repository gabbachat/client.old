@import '_modules/normalize';
@import '_modules/base';

body
  background rgba(0,0,0,0.02)
  padding 20%

// ELEMENTS
paper-button
  color #fff
  padding 5px 10px
  text-transform none
  transition background 0.5s ease

paper-button.primary
  background #007ccc

  &:hover
    background-color darken(#007ccc, 15%)

paper-button.secondary
  background #9739ab

  &:hover
    background-color darken(#9739ab, 15%)

paper-button.aside
  background: rgba(0,0,0,0.1)
  color rgba(0,0,0,0.8)

  &:hover
    background-color rgba(0,0,0,0.2)


input
  background #fff
  border 0
  border-radius 3px
  font-size 14px
  margin-right 5px
  padding 20px
