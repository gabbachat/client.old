extends layouts/chat

block content

  aside.rooms
    section.user
      img(src='#{site.public.img}avatars/users/default.png').avatar
      h1.user-name
      h2.user-handle
    
    section.public-groups
      h2 Public Groups
      ul
        li(data-name="dev", onclick="location.href='dev'")
          a(href="dev") Dev
        li(data-name="main", onclick="location.href='main'")
          a(href="main") Main
        li(data-name="seattle", onclick="location.href='seattle'")
          a(href="seattle") Seattle
        li(data-name="spam", onclick="location.href='spam'")
          a(href="spam") Spam
    
    section.active-users
      h2 People
      ul          
    
  div.logout click here to logout
      
  section.content
    
    section.header
      
      img(src='#{site.public.img}avatars/rooms/default.png').channel-avatar
      
      h1= room
      
      h3 “#{slogan}”
    
    section.messages
          
    section.footer
      img(src='#{site.public.img}avatars/users/default.png').avatar
      textarea(id='user-input', name='user-input', placeholder='Put words here. Press enter to send (markdown supported).').user-input
      button.send Send
