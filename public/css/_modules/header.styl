.logout
  font-size 12px
  position absolute
  right 10px
  bottom 5px
  color #b1c2cc
  z-index 11

  &:hover
    cursor pointer
    opacity 0.7

.header
  background #fff
  color rgba(8,8,8,0.9)
  width 100%
  height 50px
  position absolute
  z-index 10
  top 0
  left 0

  .channel-avatar
    height 80px
    float left
    border solid 5px #e2e9ed
    margin 15px 10px 15px 15px

  h1
    background #fff
    margin-top 27px
    margin-bottom 0px
    color #617885
    font-family: 'Vollkorn', serif;
    font-size 22px
    text-transform capitalize
    font-style italic
    font-weight 100

  h3
    background #e2e9ed
    padding 10px
    color #93a7b2
    font-size 14px
    font-family: 'Vollkorn', serif;
    left 0px
    font-style italic
    font-weight 100
