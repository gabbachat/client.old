.rooms
  background-color #192126
  color rgba(255,255,255,0.8)
  width 260px
  position absolute
  top 0px
  left 0px
  bottom 0px
  padding 0px
  z-index 99

  .active-users
    color #ac9bcc
    margin-top 20px
    // padding 20px

    h2
      font-size 16px
      margin-bottom 7px
      padding-left 20px

    ul
      margin 0
      padding 0

      li
        color #716587
        list-style none
        margin 0
        padding 0
        display block
        padding 3px 3px 3px 20px

        a
          color #716587
          text-decoration none

        &.selected
          background-color #716587
          color #192126

          a
            color #192126

        &:hover
          cursor pointer
          opacity 0.7

  .public-groups
    color #f0da8c
    margin-top 20px
    // padding 20px

    h2
      font-size 16px
      margin-bottom 7px
      padding-left 20px

    ul
      margin 0
      padding 0

      li
        color #a09981
        list-style none
        margin 0
        padding 0
        display block
        padding 3px 3px 3px 20px

        a
          color #a09981
          text-decoration none

        &.selected
          background-color #a09981
          color #192126

          a
            color #192126

        &:hover
          cursor pointer
          opacity 0.7


  .user
    background-color #1f333e
    padding 10px
    height 61px

    .avatar
      margin-top -10px
      margin-left -10px
      margin-bottom -10px
      margin-right 10px
      width 60px
      // margin 10px 0 0 10px
      float left

    .user-name
      color #c5dae5
      font-family: 'Vollkorn', serif;
      font-size 18px
      font-style italic
      font-weight 100
      margin 0
      margin-bottom -10px
      text-transform capitalize

    .user-handle
      color #538eae
      font-size 12px
      letter-spacing 1px
      margin 0
      margin-bottom -2px
